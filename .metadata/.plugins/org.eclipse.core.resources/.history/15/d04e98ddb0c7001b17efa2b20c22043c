/**
 * 
 */
package Agenda;
import java.util.Scanner;
import java.util.ArrayList;
/**
 * @author emili
 *
 */
public class TestAgenda {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Agenda agenda = new Agenda();
		Scanner sc=new Scanner(System.in);
		int opcion = 0;
    	
    		do {
    		System.out.println("AGENDA TELEFÓNICA");
    		System.out.println("---------------------");
    		System.out.println("1.Añadir contacto");
    		System.out.println("2.Listado de contactos");
    		System.out.println("3.Buscar contacto");
    		System.out.println("4.Eliminar contacto");
    		System.out.println("Estado de la agenda");
    		System.out.println("6.Salir");
    		System.out.println("");
    		System.out.println("Elige una opción: ");
   
    		
    		opcion=sc.nextInt();
    		
    		switch (opcion) {
			case 1: 
				System.out.println("Introduce un nombre");
				String nombre=sc.next();
				System.out.println("Introduce un telefono");
				int tel=sc.nextInt();
				if(agenda.addContacto(new Contacto(nombre,tel))) {
					System.out.println("Contacto creado");
				}else {
					System.out.println("Error al añadir contacto");
				}
				break;		
			case 2:
				System.out.println(agenda.listar());
				break;
			case 3:
				System.out.println("Introduce un nombre: ");
				nombre = sc.next();
			
				Agenda cs = agenda.buscar(nombre);
					System.out.println(cs.listar());
				break;
			case 4:
				System.out.println("Introduce un nombre: ");
				nombre = sc.next();		
				tel = sc.nextInt();
			
				if (agenda.eliminar(new Contacto(nombre,tel))) {
					System.out.println("Contacto eliminado");
				} else {
					System.out.println("No he encontrado ese teléfono para eliminar");
				}
				break;
			case 5:
				if(agenda.llena()) {
					System.out.println("La agenda esta llena.");
				}else {
					System.out.println("La agenda esta vacia.");
				}
				break;
			case 6:
				System.out.println("Usted acaba de salir del programa.");
				break;
    		}
    		}while(opcion!=6);
    		
	}
}
